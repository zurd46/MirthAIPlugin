{
    "name": "mirth-plugin-ai-gen",
    "version": "0.1.6",
    "description": "Erstelle Mirth Connect Plugins automatisch mit KI (LangChain/LangGraph) direkt in VSCode.",
    "keywords": [
        "mirt",
        "connect"
    ],
    "repository": {
        "type": "git",
        "url": ""
    },
    "license": "ISC",
    "author": "Daniel Zurmühle",
    "type": "commonjs",
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p .",
        "watch": "tsc -w -p .",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.77.0",
        "typescript": "^5.4.0"
    },
    "engines": {
        "vscode": "^1.77.0"
    },
    "displayName": "Mirth Plugin AI Generator",
    "publisher": "Daniel Zurmühle",
    "icon": "images/icon.png",
    "categories": [
        "Other",
        "AI"
    ],
    "activationEvents": [
        "onCommand:mirthPluginGen.openChat"
    ],
    "contributes": {
        "commands": [
            {
                "command": "mirthPluginGen.openChat",
                "title": "Mirth Plugin: AI Chat öffnen",
                "category": "Mirth Plugin"
            }
        ]
    }
}